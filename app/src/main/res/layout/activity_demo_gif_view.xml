<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/total_layout">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/abl_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/toolbar_common_1" />

    </android.support.design.widget.AppBarLayout>

    <com.wj.library.widget.GifView
        android:layout_below="@+id/abl_bar"
        android:id="@+id/gif_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/demo_gif_1" />

    <com.wj.library.widget.GifView
        android:layout_below="@+id/gif_1"
        android:id="@+id/gif_2"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/demo_gif_2" />

    <com.wj.library.widget.GifView
        android:layout_below="@+id/gif_2"
        android:id="@+id/gif_3"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/demo_gif_3" />
</RelativeLayout>
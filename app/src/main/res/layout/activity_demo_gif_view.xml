<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/total_layout"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/toolbar_common_1" />

    </android.support.design.widget.AppBarLayout>

    <com.wj.library.widget.GifView
        android:id="@+id/gif_1"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/demo_gif_1" />

    <com.wj.library.widget.GifView
        android:id="@+id/gif_2"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/demo_gif_2" />

    <com.wj.library.widget.GifView
        android:id="@+id/gif_3"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/demo_gif_3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            style="@style/button"
            android:id="@+id/bt_change"
            android:layout_weight="1"
            android:text="暂停" />

        <Button
            android:id="@+id/bt_restart"
            style="@style/button"
            android:layout_weight="1"
            android:text="恢复" />
    </LinearLayout>
</LinearLayout>